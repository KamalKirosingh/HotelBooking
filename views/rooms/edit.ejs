<% layout('layouts/boilerplate')%>
<div class="container mb-4">    
    <div class="row">
      <div class="col">
      </div>
      <div class="col-12 col-sm-12 col-lg-9">
        <div class="card shadow border-0">          
          <div class="card-body">
<h1 class="text-center">Edit Room</h1>

      <form action="/hotels/<%=hotel._id%>/rooms/<%=room._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <!-- edit title -->
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="room[title]" value ="<%=room.title%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide a room title.
              </div>
        </div>
         <!-- edit price -->
         <div class="mb-3">
            <label class="form-label" for="price">Price/Night</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">Â£</span>
                <input type="text" class="form-control" id="price" aria-label="price"
                aria-describedby="price-label" name="room[price]" value ="<%=room.price%>" required>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide a price.
              </div>
        </div>
        <!-- edit description -->
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="room[description]" required><%=room.description%></textarea>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please provide a description of your room.
          </div>
        </div>
          <!-- edit booking -->
          <div class="row">
            <div class="form-group col-md-6">
              <label for="">Booking Window (Start)*</label>
              <input type="text" class="form-control" name="room[start]" value ="<%=room.booking.start%>" required>
              <div class="valid-feedback">
                Looks good!
            </div>
              <div class="invalid-feedback">
                Please provide a booking window.
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="">Booking Window (End)*</label>
              <input type="text" class="form-control" name="room[end]" value ="<%=room.booking.end%>" required>
              <div class="valid-feedback">
                Looks good!
            </div>
              <div class="invalid-feedback">
                Please provide a booking window.
              </div>
            </div>
          </div>
          <!-- edit amenities -->
          <div class="form-group">
            <label for="">Amenities separated by commas</label>
            <input type="text" class="form-control" name="room[amenities]" value ="<%=room.amenities%>">
          </div>
        <!-- edit image -->
        <div class="mb-3">
            <label for="">Images</label>
            <!-- To add more images -->
            <!-- name = 'image' has to match the upload.array('image') -->
            <div class="form-file custom-file">
                <input type="file" class="form-file-input" id="image" name="image" multiple>
                <label class="form-file-label" for="image">
                    <span class="form-file-text custom-file-label">Add more image(s)...</span>
                    <span class="form-file-button">Browse</span>
                </label>
            </div>
        </div>
        <!-- To delete current images -->
        <div class="mb-3">
            <!-- The first argument represents the element in the images array. The second argument represents the position/index of said element. -->
            <% room.images.forEach(function(img, i) {  %>
            <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
            <div class="form-check-inline">
                <!-- any checkbox that is checked, its unique value(img.filename) is added to deleteImages which becomes an array when req.body is parsed-->
                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
            </div>
            <label for="image-<%=i%>">Delete</label>
            <% })%>
        </div>
        <div class="mb-3 mt-3 ml-3">
            <button class="btn btn-info">Edit Hotel</button>
        </div>
    </form>
</div>
</div>
</div>
<div class="col">
</div>
</div>
</div>
    
















              



    